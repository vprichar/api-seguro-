
<%= form_for(@campaign) do |f| %>
<% if @campaign.errors.any? %>
<% @campaign.errors.full_messages.each do |message| %>
<script >
   Materialize.toast("<%= message%>", 4000)
</script>
<% end %>
<% end %>
<div class="row">
<div class="col s4 m4">
   <P> Titulo de la compaña </P>
   <%= f.text_field :name %>
   <%= f.label :Mensaje  ,:for =>"textarea1"%><br>
   <%= f.text_area :body , :class =>"materialize-textarea", :length =>"120" %>
</div>
<div class="col s4 m4">
   
      <label for="test7">Fecha inicial </label>
      <input type="date" class="datepicker">
      <label for="test7">Fecha final </label>
      <input type="date" class="datepicker">
   </div>
   <div class="col s4 m4">
      Acciones de la notificación 
      <%= f.select(:direcion, [ ['Solo notificación', '1'], [' Link web ', '2'], ['Modal web   ', '3'] ], {:selected => 0}, { :class => 'selectpicker' }) %>
      Datos
      <%= f.text_area :data , :class =>"materialize-textarea", :length =>"120" %>
      <div class ="waves-effect waves-light btn">
      <%= f.submit 'Guardaar' %> 
      </div>
   </div>

<% end %>
